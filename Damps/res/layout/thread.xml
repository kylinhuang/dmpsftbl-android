<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_thr_layout1"
        style="@style/titlebar" >

        <ImageView
            android:id="@+id/iv_thr_back"
            style="@style/pic_title_left" />

        <TextView
            style="@style/title"
            android:layout_toRightOf="@+id/iv_thr_back"
            android:id="@+id/tv_thr_title" />

        <ProgressBar
            android:id="@+id/pb_thr_bar1"
            style="@style/progressbar"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/iv_thr_refresh" />

        <ImageView
            android:id="@+id/iv_thr_refresh"
            style="@style/pic_title_mid"
            android:layout_toLeftOf="@+id/iv_thr_reply"
            android:contentDescription="@string/pic_ref"
            android:onClick="refresh"
            android:src="@drawable/refresh" />

        <ImageView
            android:id="@+id/iv_thr_reply"
            style="@style/pic_title_right"
            android:contentDescription="@string/pic_rep"
            android:onClick="reply"
            android:src="@drawable/edit" />
    </RelativeLayout>

    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_thr_layout1"
        android:longClickable="true" >
    </ListView>

</RelativeLayout>