    <TextView
        android:id="@+id/tv_hom_member"
        style="@style/desc_edittext"
        android:textStyle="bold"
        android:layout_below="@+id/ll_hom_layout3"
        android:text="@string/membersection" />

    <LinearLayout
        android:id="@+id/ll_hom_layout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_hom_member" >

        <Button
            android:id="@+id/bu_hom_team"
            style="@style/button"
            android:background="@drawable/button_inactive"
            android:enabled="false"
            android:onClick="startTeammanagement"
            android:text="@string/teammanagement" />

        <Button
            android:id="@+id/bu_hom_nachrichten"
            style="@style/button"
            android:background="@drawable/button_inactive"
            android:enabled="false"
            android:onClick="startMessages"
            android:text="@string/messages" />
    </LinearLayout>

</RelativeLayout>