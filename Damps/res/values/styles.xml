<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="titlebar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/damps_blau</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/weis</item>
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:textColor">@color/weis</item>
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/damps_blau</item>
        <item name="android:background">@color/hellgrau</item>
    </style>

    <style name="column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
         <item name="android:textColor">@color/weis</item>
        
    </style>

    <style name="text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/schwarz</item>
    </style>

    <style name="progressbar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="thr_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/damps_blau</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="thr_last">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="pic_title_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/previous_item</item>
        <item name="android:onClick">back</item>
        <item name="android:contentDescription">@string/pic_back</item>
    </style>

    <style name="pic_title_mid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="pic_title_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="desc_edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>